<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    tools:context=".MainActivity" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	    
	<TextView
	    android:id="@+id/ClatAddrLabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/ClatAddrLabel2"
	    android:layout_below="@+id/ClatAddrLabel2"	    

	    android:layout_marginTop="20dp"
	    android:text="@string/ClatAddr"
	    android:textAppearance="?android:attr/textAppearanceMedium" />
	<!--  	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="20dp"-->

    <TextView
        android:id="@+id/ClatAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        
        android:layout_alignRight="@+id/on"
        android:layout_alignBottom="@+id/ClatAddrLabel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <!-- android:layout_alignBaseline="@+id/ClatAddrLabel"
        android:layout_alignBottom="@+id/ClatAddrLabel" -->
    
    <TextView
	    android:id="@+id/ClatAddrLabel2"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
	    android:layout_marginTop="20dp"
        android:singleLine="true"
	    android:text="@string/CLATSwitch"
	    android:textAppearance="?android:attr/textAppearanceMedium" />
    
    	    <!--android:textColor="#000000"-->

    <org.slipbtn.SlipButton
        android:id="@+id/on"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/ClatAddrLabel2"
         
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
            />

	<TextView
	    android:id="@+id/ClatStatusLabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/ClatAddrLabel"
	    android:layout_below="@+id/ClatAddrLabel"
	    android:layout_marginTop="20dp"
	    android:text="@string/ClatStatus"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ClatStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ClatAddr"
        android:layout_alignBottom="@+id/ClatStatusLabel"
        android:textIsSelectable="false"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <!-- android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" -->
    
    <TextView
        android:id="@+id/WIFIStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ClatStatusLabel"
        android:layout_below="@+id/ClatStatusLabel"
        android:layout_marginTop="20dp"
        android:text="@string/WIFIStatus"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/WIFIStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/WIFIStatusLabel"
        android:layout_alignRight="@+id/ClatStatus"
        android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/IPv4AddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/WIFIStatusLabel"
        android:layout_below="@+id/WIFIStatusLabel"
        android:layout_marginTop="20dp"
        android:text="@string/IPv4Address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/IPv4Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IPv4AddressLabel"
        android:layout_alignRight="@+id/WIFIStatus"
        android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
   	<TextView
   	    android:id="@+id/IPv6AddressLabel"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/IPv4AddressLabel"
   	    android:layout_below="@+id/IPv4AddressLabel"
   	    android:layout_marginTop="20dp"
   	    android:text="@string/IPv6Address"
   	    android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/IPv6Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IPv6AddressLabel"
        android:layout_below="@+id/IPv6AddressLabel"
        android:layout_marginTop="20dp"
        android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />
	
    <TextView
        android:id="@+id/LastMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IPv6Address"
        android:layout_below="@+id/IPv6Address"
        android:layout_marginTop="20dp"
        android:text="@string/LastMessage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/LastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LastMessageLabel"
        android:layout_below="@+id/LastMessageLabel"
        android:layout_marginTop="20dp"
        android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/BinaryStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LastMessage"
        android:layout_below="@+id/LastMessage"
        android:layout_marginTop="20dp"
        android:text="@string/BinaryStatus"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
	<TextView
        android:id="@+id/BinaryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BinaryStatusLabel"
        android:layout_below="@+id/BinaryStatusLabel"
        android:layout_marginTop="20dp"
        android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/StdoutLabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/BinaryStatus"
	    android:layout_alignLeft="@+id/BinaryStatus"
	    android:layout_marginTop="20dp"
	    android:text="@string/StdoutLabel"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/Stdout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/StdoutLabel"
	    android:layout_alignLeft="@+id/StdoutLabel"
	    android:layout_marginTop="20dp"
	    android:textIsSelectable="false"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/StderrLabel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/Stdout"
	    android:layout_alignLeft="@+id/Stdout"
	    android:layout_marginTop="20dp"
	    android:text="@string/StderrLabel"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/Stderr"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/StderrLabel"
	    android:layout_alignLeft="@+id/StderrLabel"
	    android:layout_marginTop="20dp"
	    android:textIsSelectable="false"
	    android:textAppearance="?android:attr/textAppearanceMedium" />
			
</RelativeLayout>	    
</ScrollView>